# ── Supabase (required for web + client) ──
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ── Port mapping ──
WEB_PORT=3000
CLIENT_PORT=3001
CORE_PORT=8081

# ── Backend (profile: platform, all) ──
POSTGRES_DB_JDBC=jdbc:postgresql://host:5432/postgres?user=postgres&password=xxx
JWT_AUTH_URL=https://your-project.supabase.co/auth/v1
JWT_SECRET_KEY=your-jwt-secret
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
ORIGIN_API_URL=http://localhost:3001
TEMPORAL_SERVER_ADDRESS=localhost:7233

# ── Client app (profile: platform, all) ──
NEXT_PUBLIC_API_URL=http://localhost:8081/api
NEXT_PUBLIC_HOSTED_URL=http://localhost:3001
NEXT_PUBLIC_AUTH_PROVIDER=supabase

# ── Web app (optional) ──
NEXT_PUBLIC_SITE_URL=https://getriven.io
NEXT_PUBLIC_CLIENT_URL=

# ── Cross-app auth (optional) ──
NEXT_PUBLIC_AUTH_ENABLED=false
NEXT_PUBLIC_COOKIE_DOMAIN=

# ── CDN ──
NEXT_PUBLIC_CDN_URL=https://cdn.riven.software

# ── Analytics (optional, both required if either is set) ──
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=
